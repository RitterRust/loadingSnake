{
    "manifest_version": 2,
    "name": "snake for yt",
    "description": "replaces yt loading animation with og circle and adds snake game",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["src/js/content.js"],
            "css": ["src/css/style.css", "src/css/spinner.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "src/js/game.js",
        "src/js/snake.js",
        "src/js/food.js",
        "src/js/grid.js",
        "src/js/input.js",
        "src/js/animation.js"
      ]
}
