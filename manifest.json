{
    "manifest_version": 3,
    "name": "snake for yt",
    "description": "Replaces Youtube's loading animation with the original loading circle that turns into a snake game when an arrow key is pressed. Shift + arrow key starts a game when the video is not loading.",
    "version": "1.0",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup_ui/public/index.html",
        "default_icon": {
            "16": "assets/icons/popup_icon_16.png",
            "32": "assets/icons/popup_icon_32.png",
            "48": "assets/icons/popup_icon_48.png",
            "128": "assets/icons/popup_icon_128.png"
          }
      },

    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["content_scripts/js/content.js"],
            "css": ["content_scripts/css/style.css", "content_scripts/css/spinner.css"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [{
        "resources": [
            "content_scripts/js/game.js",
            "content_scripts/js/snake.js",
            "content_scripts/js/food.js",
            "content_scripts/js/grid.js",
            "content_scripts/js/input.js",
            "content_scripts/js/animation.js"
        ],
        "matches": ["https://*.youtube.com/*"]
    }]
}
